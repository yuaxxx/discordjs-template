{
  "name": "discord.js-template",
  "version": "1.0.0",
  "description": "Production-ready Discord.js v14 bot template with ESM, hot-reload, modular commands, and error handling",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\""
  },
  "type": "module",
  "author": "yuaxx",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "discord",
    "discord-bot",
    "discord.js",
    "bot-template",
    "slash-commands",
    "esm",
    "modular",
    "hot-reload"
  ]
}
